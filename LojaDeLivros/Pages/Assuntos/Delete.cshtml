@page
@model LojaDeLivros.Pages.Assuntos.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Excluir Assunto</h2>

<form method="post">
    <input type="hidden" asp-for="Assunto.CodAs" />

    <div>
        <p>Tem certeza que deseja excluir o assunto abaixo?</p>
        <dl class="row">
            <dt class="col-sm-2">Código</dt>
            <dd class="col-sm-10">@Model.Assunto.CodAs</dd>

            <dt class="col-sm-2">Descricao</dt>
            <dd class="col-sm-10">@Model.Assunto.Descricao</dd>
        </dl>
    </div>

    <button type="submit" class="btn btn-primary btn-lg btn-block">Confirmar Exclusão</button>
    <a asp-page="./Index" class="btn btn-secondary btn-lg btn-block">Cancelar</a>
</form>
