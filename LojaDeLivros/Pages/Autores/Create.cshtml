@model LojaDeLivros.Pages.Autores.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Novo Autor</h2>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Autor.Nome"></label>
        <input asp-for="Autor.Nome" class="form-control input-largura-40" />
        <span asp-validation-for="Autor.Nome" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
    <a asp-page="./Index" class="btn btn-secondary btn-lg btn-block">Cancelar</a>
</form>
