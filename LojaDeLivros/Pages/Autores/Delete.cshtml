@page
@model LojaDeLivros.Pages.Autores.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Excluir Autor</h2>

<form method="post">
    <input type="hidden" asp-for="Autor.CodAu" />

    <div>
        <p>Tem certeza que deseja excluir o autor abaixo?</p>
        <dl class="row">
            <dt class="col-sm-2">Código</dt>
            <dd class="col-sm-10">@Model.Autor.CodAu</dd>

            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Autor.Nome</dd>
        </dl>
    </div>

    <button type="submit" class="btn btn-primary btn-lg btn-block">Confirmar Exclusão</button>
    <a asp-page="./Index" class="btn btn-secondary btn-lg btn-block">Cancelar</a>
</form>
