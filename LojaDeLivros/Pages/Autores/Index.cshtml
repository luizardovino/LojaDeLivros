@page
@model LojaDeLivros.Pages.Autores.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Autores</h2>

<p>
    <a asp-page="./Create" class="btn btn-primary">Novo Autor</a>
</p>

<table class="table  table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var autor in Model.Autores)
        {
            <tr>
                <td>@autor.CodAu</td>
                <td>@autor.Nome</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@autor.CodAu" class="btn btn-success btn-rounded">Editar</a> |
                    <a asp-page="./Delete" asp-route-id="@autor.CodAu" class="btn btn-danger btn-rounded">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>